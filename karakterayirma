package kadirdirdir;

import java.util.Scanner;

public class karakterayirma {

	public static void main(String[] args) {
        Scanner klavye = new Scanner(System.in);
        System.out.println("Bir cumle girin");
        String cumle = klavye.nextLine();
        
        //cumlenin uzunlugunu bulalim
        int boy = cumle.length();
        
        //karakterleri teker teker alip yazdir
        for (int i = 0; i < boy; i++) {
            char c = cumle.charAt(i);
            System.out.println( i + ". karakter = " + c);
        }


	}

}
